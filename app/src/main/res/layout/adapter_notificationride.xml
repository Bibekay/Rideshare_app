<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="RIDE  ACCEPTED DETAILS"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:id="@+id/rlPickpoint"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/StringPickuppoint"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="PICK-UP POINT"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvPickuppoint"
                android:layout_toRightOf="@+id/StringPickuppoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Pick up point"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rldestiny"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/rlPickpoint"
            android:layout_marginLeft="40dp">

            <TextView
                android:id="@+id/StringDesrination"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="DESTINATION"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/StringDesrination"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Destination"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlJourney"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/rldestiny"
            >

            <TextView
                android:id="@+id/StringJourneydate"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="JOURNEY DATE"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvJourneydate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/StringJourneydate"
                android:gravity="center"
                android:textSize="10dp" android:textColor="@color/black" android:fontFamily="sans-serif-medium"
                android:hint="Journey date"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPtime"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/rlJourney">
            <TextView
                android:id="@+id/StringTime"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="ARRIVAL TIME"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/StringTime"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Time"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPaidornot"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/rlPtime"
            >

            <TextView
                android:id="@+id/StringPiadornot"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="PAID OR NOT"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tvPaidornot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/StringPiadornot"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:hint="Paid or not"/>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rlCost"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/rlPaidornot"
            >

            <TextView
                android:id="@+id/Stringcost"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="COST"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/Stringcost"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="10dp"
                android:hint="No"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvRequested"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="REQUESTED BY "
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/rlCost"
            android:textColor="@color/black"/>



        <RelativeLayout
            android:id="@+id/rlUsername"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/tvRequested"
            >

            <TextView
                android:id="@+id/StringUsername"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="FULLNAME"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/StringUsername"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="10dp"
                android:hint="USERNAME"
                android:textColor="@color/black"/>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rlContact"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/rlUsername"
            >

            <TextView
                android:id="@+id/StringContact"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="CONTACT"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/StringContact"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="10dp"
                android:hint="Contact"
                android:textColor="@color/black"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnAccetnotify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/rlContact"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"></RelativeLayout>
